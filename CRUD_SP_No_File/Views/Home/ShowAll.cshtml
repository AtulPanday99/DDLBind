
@{
    Layout = null;
}
@using CRUD_SP_No_File.Models
@model List<EmployeeMaster>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/Content/css/alertify.min.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/Content/js/alertify.min.js"></script>
    <title>ShowAll</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">
                @*<input type="hidden" id="hdndelId" value="@Model.FirstOrDefault().RId" />*@
                <h3 class="text-center">All Employee Record</h3>
                <a href="/Home/Index">Add New Record</a>
                @*<h5>@TempData["msg"]</h5>*@
                <table class="table">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email Id</th>
                        <th>Contact No</th>
                        <th>Address</th>
                        <th>State</th>
                        <th>City</th>
                        <th>Pin Code</th>
                        <th colspan="2">Manage</th>
                    </tr>
                    @foreach (EmployeeMaster em in Model)
                    {
                        <tr>
                            <td>@em.RId</td>
                            <td>@em.Name</td>
                            <td>@em.EmailId</td>
                            <td>@em.ContactNo</td>
                            <td>@em.Address</td>
                            <td>@em.StateName</td>
                            <td>@em.CityName</td>
                            <td>@em.PinCode</td>
                            <td>
                                <a href="/Home/Edit?RId=@em.RId">Edit</a>
                            </td>
                            <td>

                                @Html.ActionLink("Delete",
      "Delete", new { RId = em.RId },
      new { onclick = "return confirm('Do you really want to delete the tag ?')" })
                            </td>

                        </tr>
                    }
                </table>
            </div>
            <div class="col-sm-1"></div>
        </div>
    </div>
</body>
</html>





